<% provide(:page_title, "Edit Comment") %>

<section class="edit_comment">
    <%= form_for ([@post, @comment]) do |f| %>
    
        <div class="form-group">
            <%= f.label :comment %>
            <%= f.text_field :content, class: "form-control" %>
        </div>

        <%= link_to 'Back', @post, class: "btn btn-edit_comment_back" %>

        <%= f.submit "Update Comment", class: "btn btn-update_comment" %>

    <% end %>
</section>